    <div class="tabs">
    <div id="form-display" class="showcase-form card posi_rel active" data-tab-content>
        <h2>REGISTRATION FORM</h2>
        <form action="/features/{{userid}}" id="userform" method="POST">

            <table class="part1">
                <tr>
                    <td colspan="2">
                        <label for="name">Full Name</label>
                        <input type="text" name="name" id="name" placeholder="Enter full name"
                            class="pname placeholder" required>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label for="name">Email</label>
                        <input type="text" name="email" id="email" value="{{userid}}" placeholder="Enter your email"
                            class="pname placeholder" required>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="name">Age</label>
                        <input type="number" name="age" id="age" placeholder="Enter age" class="page placeholder" required>
                    </td>
                    <td>
                        <label for="gender">Gender</label>
                        <select name="gender" id="gender" required>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="others">Others</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="number">Phone number</label>
                        <input type="number" name="number" id="number" placeholder="Enter number"
                            class="pnum placeholder" required>
                    </td>
                    <td>
                        <label for="location">Location</label>
                        <span id="image"></span>
                        <a onclick="getLocation()" target="_blank" class="locationlink">Get location</a>
                        <input type="text" id="locate" value="hh" name="locate" style="display: none;" required>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label for="name">How can we help you?</label>
                        <input type="text" name="helptext" id="help-text" placeholder="Enter what help you need."
                            class="pname placeholder" required>
                    </td>
                </tr>
                <tr>
                    <td class="submit" colspan="3">
                        <input type="text" style="display: none;" name="status" value="pending" required/>
                        <input type="text" id="timebox" style="display: none;" name="gettime" value="date" required/>
                        <input type="submit" class="locationlink" value="Register" />
                    </td>
                </tr>

            </table>
        </form>
    </div>
    <input type="text" class="takeuserid" style="display: none;" value="{{userid}}">
